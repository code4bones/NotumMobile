<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" 
    android:background="@drawable/dlg_password_inset">

    <TextView
        android:id="@+id/tvPasswordMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:shadowColor="#FF0000"
        android:shadowDx="4"
        android:shadowRadius="5"
        android:textColor="#FFFA00"
        android:textStyle="bold"        
        android:text="Введите пароль..."
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/etPasswordValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvPasswordMessage"
        android:layout_marginTop="19dp"
        android:background="@drawable/edit_text_shape"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnPasswordOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etPasswordValue"
        android:layout_marginTop="34dp"
        android:background="@drawable/green_button"
        android:text="Принять" />

    <Button
        android:id="@+id/btnPasswordCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPasswordOk"
        android:layout_alignBottom="@+id/btnPasswordOk"
        android:layout_alignParentLeft="true"
        android:background="@drawable/red_button"
        android:text="Отмена" />

</RelativeLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/nameCellLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvParamDate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/title"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Наименование Наблюдения"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#0000FF" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/etParamName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ibParamTemplate"
                        android:layout_toRightOf="@+id/ibParamIcon"
                        android:background="@drawable/edit_text"
                        android:ems="10" />

                    <Button
                        android:id="@+id/ibParamTemplate"
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:background="@drawable/blue_button"
                    	android:textColor="@drawable/state_color"
                    	android:text="Шаблон"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                    <ImageButton
                        android:id="@+id/ibParamIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/trans_bgr"
                        android:src="@drawable/avatar" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/startDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <TextView
                    android:textColor="#0000FF"
                    android:id="@+id/tvHistValue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
          			android:background="@drawable/title"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Дата начала" />

                <RelativeLayout
                    android:id="@+id/startDateSubLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     >

                    <ImageButton
                        android:id="@+id/ibParamStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/trans_bgr"
                        android:src="@drawable/button_date" />

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/ibParamStartDate"
                        android:background="@drawable/drop_shadow"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="20-апреля-2013"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@drawable/param_name_text_val" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/finishDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <TextView
                    android:textColor="#0000FF"
                    android:id="@+id/tvHistStartValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
          			android:background="@drawable/title"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Прогнозируемая дата окончания"
                   />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp" >

                        <ImageButton
                            android:id="@+id/ibParamEndDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/trans_bgr"
                            android:src="@drawable/button_date" />

                        <TextView
                            android:textColor="@drawable/param_name_text_val"
                            android:id="@+id/tvEndDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
	                        android:background="@drawable/drop_shadow"
                            android:text="Дата окончания"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                    <ImageButton
                        android:id="@+id/bnStepInc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/trans_bgr"
                        android:src="@drawable/button_up" />

                    <ImageButton
                        android:id="@+id/bnProfileSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/bnStepInc"
                        android:background="@drawable/trans_bgr"
                        android:src="@drawable/button_down" />

                        <TextView
                            android:id="@+id/tvProfileHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
	                        android:background="@drawable/drop_shadow"
                            android:text="Интервал(дн.)"
                            android:textColor="@drawable/param_name_text"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/tvStep"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/tvProfileHeader"
                            android:text="Не ограниченно"
                            android:background="@drawable/drop_shadow"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@drawable/param_name_text_val" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/metricLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <TextView
                    android:textColor="#0000FF"
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            		android:background="@drawable/title"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall"
			         android:text="Метрика"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id="@+id/etMeasure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/edit_text"
                            android:ems="10"
                            android:hint="кг"
                            android:width="@dimen/param_edit_len" >

                            <requestFocus />
                        </EditText>

                        <TextView
                            android:textColor="@drawable/param_name_text"
                            android:id="@+id/textView8"
	                        android:background="@drawable/drop_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Единица измерения"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id="@+id/etIncVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:background="@drawable/edit_text"
                            android:width="@dimen/param_edit_len" />

                        <TextView
                            android:textColor="@drawable/param_name_text"
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
	                        android:background="@drawable/drop_shadow"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Единица прироста"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id="@+id/etParamCurrentValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:background="@drawable/edit_text"
                            android:width="@dimen/param_edit_len" />

                        <TextView
                            android:textColor="@drawable/param_name_text"
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
	                        android:background="@drawable/drop_shadow"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Текущее значение"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id="@+id/etTargetValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:ems="10"
                            android:background="@drawable/edit_text"
                            android:inputType="numberDecimal"
                            android:width="@dimen/param_edit_len" />

                        <TextView
                            android:textColor="@drawable/param_name_text"
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drop_shadow"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="Желаемое значение"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/bnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_button"
                    android:textColor="#fff610"
                    android:text="Отмена" />

                <Button
                    android:id="@+id/bnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/green_button"
                    android:textColor="#fff610"
                    android:text="Сохранить" />

                <Button
                    android:id="@+id/bnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/bnSave"
                    android:background="@drawable/button_red"
                    android:textColor="@drawable/state_color"
                    android:text="Удалить" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
    

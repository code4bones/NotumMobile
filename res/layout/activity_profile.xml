<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity" >

    <TextView
        android:id="@+id/tvProfileHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:gravity="center_vertical|center_horizontal"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/ibParamIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvProfileHeader"
        android:layout_below="@+id/tvProfileHeader"
        android:layout_marginTop="16dp"
        android:background="@drawable/trans_bgr"
        android:paddingRight="10dp"
        android:src="@drawable/avatar" />

    <EditText
        android:id="@+id/etParamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ibParamIcon"
        android:layout_below="@+id/ibParamIcon"
        android:layout_marginTop="28dp"
        android:drawablePadding="10dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/bnProfileCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bnProfileDelete"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_cancel"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/bnProfileSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_save" />

    <ImageButton
        android:id="@+id/bnProfileDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/bnProfileSave"
        android:background="@drawable/button_delete" />

</RelativeLayout>